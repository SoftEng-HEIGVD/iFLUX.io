{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Event source template",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minimum": 1
    },
    "configuration": {
      "description": "Providing a schema aims to help the WUI to configure the instances.",
      "type": "object",
      "properties": {
        "schema": {
          "type": "string"
        },
        "callbackUrl": {
          "type": "string"
        },
        "callbackToken": {
          "type": "string"
        },
        "t": {
          "type": "object",
          "properties": {
            "t2": {
              "type": "object",
              "properties": {
                "t3": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "required": [ "schema", "callbackUrl", "callbackToken" ]
    },
    "public": {
      "type": "boolean"
    }
  },
  "required": [ "name" ]
}