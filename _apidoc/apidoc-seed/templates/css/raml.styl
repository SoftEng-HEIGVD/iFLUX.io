
.parent
  color #999

.child
  color #000

.toggle-all
  i
    cursor pointer

res(i, max)
  if i < max
    & > .resource
      background lighten(#EEE, i * 35%)
      border-left-color lighten(#EEE, i * 35%)

      .resource-title
        background-color lighten(#EEE, i * 35%)

      res(i + 1, max)


.method
  border-left 10px solid darken(#EEE, 20%)
  flex-direction column
  background #EEE
  display flex

  .method-title
    align-items baseline
    flex-direction row
    display flex
    margin 0
    flex 1

    span.verb
      text-transform uppercase
      font-weight bold
      padding 10px 0
      font-size 1em
      color #f3f3f6
      display flex

    span.url
      display flex
      color black

  .description
    padding 15px 0
    margin 0

    p
      margin 0

  ul.nav-tabs
    border-bottom-width 3px

    li
      margin-bottom 0

      a
        border none !important
        border-radius 0
        outline 0

  .tab-content
    padding 0 10px

.resource
  border-top 1px solid darken(#EEE, 20%)
  flex-direction column
  padding-left 10px
  background #EEE
  display flex

  &:last-child.resource-level-1
    border-bottom 1px solid darken(#EEE, 20%)

  res(1, 5)

  .resource-title
    background-color #EEE
    padding 10px 0
    margin 0

    a
      text-decoration none !important
      cursor pointer

    .badge
      text-transform uppercase
      line-height normal
      font-weight bold
      margin-right 5px
      border-radius 0
      min-width 70px
      padding 5px 0
      color #f3f3f6
      float right

methods = {
  get: #63a8e2,
  post: #6cbd7d,
  patch: #bd9368,
  put: #22bac4,
  delete: #d26460
}

for k, v in methods
  .badge-{k}
    background-color v

  .method-{k}
    border-left-color v
    background lighten(v, 85%)

    .method-title
      background v

    ul.nav-tabs
      border-bottom 1px solid v





.markdown *:last-child
  margin-bottom 0

