doctype html
html
	head
		title API in details
		meta(charset='utf8')
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name='description', content= description)
		if minifyAssets
			link(rel="stylesheet", href="/css/global.css")
		else
			link(rel="stylesheet", href="/css/bootstrap.css")
			link(rel="stylesheet", href="/css/app.css")
			link(rel="stylesheet", href="/css/raml.css")
			link(rel="stylesheet", href="/css/highlight.github.min.css")
			link(rel="stylesheet", href="/css/styles.css")

	body

		header#header
			h1
				a(href='#{blogUrl}') iFlux.io
			nav#nav
				ul
					li(style='white-space: nowrap;')
						a(href='#{ifluxUrl}') Sandbox
					li(style='white-space: nowrap;')
						a(href='#{blogUrl}/blog.html') Blog
					li(style='white-space: nowrap;')
						a(href='/') API

		.api-container
			.api-content
				a(id="top")
				h1 API in details
				hr
				block body
					div!= contents
			.api-menu
				.api-menu-content(data-spy='affix')
					block menu
						if section && subsections[section]
							h1 Sections
							hr
							ul.nav.subnav
								for subsection in subsections[section]
									li(class="#{ title == subsection.title ? 'active' : '' }")
										a(href=subsection.link)
											| #{subsection.title}
											if subsection.private
												i.glyphicon.glyphicon-lock

		//
			.footer
				.container
					p
						a(href="https://github.com/lotaris/apidoc-seed")=name
						| &nbsp;- #{description}
					p Version: #{version}  |  Built #{creationDate}


		if minifyAssets
			script(type="text/javascript", src="/js/global.js")
		else
			script(type="text/javascript", src="/js/jquery.min.js")
			script(type="text/javascript", src="/js/bootstrap.js")
			script(type="text/javascript", src="/js/smoothscroll.js")
			script(type="text/javascript", src="/js/app.js")
